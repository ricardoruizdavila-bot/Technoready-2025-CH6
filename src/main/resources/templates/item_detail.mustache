<!--
  Plantilla Mustache para la página de detalle de un artículo.
  Muestra el nombre, ID, precio formateado y descripción del artículo.
-->

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body>

<!-- add para estilo de la pagina -->

<div class="shop-container">
  <a class="back-link" href="/ui/items">← Volver al catálogo</a>

  <div class="detail-item">

    <div class="detail-text">
      <h1 class="detail-name">{{name}}</h1>
      <p class="detail-price">{{priceFmt}}</p>
      <p class="detail-description">{{description}}</p>

      <button class="offer-btn">Quiero ofertar</button>


      <!-- formulario de oferta (el tuyo actual) -->
      <!-- Formulario oculto; IDs y clases que su script espera -->
          <form id="offer-form" class="offer-form" style="display:none; margin-top:16px;">
            <!-- itemId oculto: lo requiere tu API -->
            <input type="hidden" id="item-id-input" name="itemId" value="{{id}}"/>

            <div class="form-item">
              <label class="form-label" for="name-input">Tu nombre</label>
              <input class="form-input" id="name-input" name="name" type="text" required />
            </div>

            <div class="form-item">
              <label class="form-label" for="email-input">Correo</label>
              <input class="form-input" id="email-input" name="email" type="email" required />
            </div>

            <div class="form-item">
              <label class="form-label" for="amount-input">Monto ofrecido</label>
              <input class="form-input" id="amount-input" name="amount" type="number" step="0.01" min="0.01" required />
            </div>

            <button class="form-button" type="submit">Enviar oferta</button>
            <p id="offer-result" class="error-message"></p>
          </form>
        </div>

<a href="/ui/items/{{id}}/offers" class="offer-link">Ver contraofertas</a>

<!-- imagen del producto -->
    <div class="detail-media">
<div class="product-media"><div class="img-skeleton"></div></div>

    </div>
  </div>
</div>



  <script src="/script.js"></script>
</body>
</html>

